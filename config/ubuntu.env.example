# SignGlove 우분투 서버 환경변수 설정

# 서버 설정
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production
DEBUG=false

# 데이터 저장 경로 (우분투 서버 경로)
DATA_PATH=/opt/signglove/data
BACKUP_PATH=/opt/signglove/backup
LOG_PATH=/var/log/signglove

# 데이터베이스 (향후 PostgreSQL/MySQL 대비)
DATABASE_URL=sqlite:///opt/signglove/data/signglove.db

# 교수님 서버 연동 설정
PROFESSOR_SERVER_URL=http://professor-server:8080/api
PROFESSOR_SERVER_TOKEN=your_professor_server_token_here
ENABLE_PROFESSOR_PROXY=true

# Arduino 하드웨어 설정
ARDUINO_WIFI_SSID=SignGlove_Network
ARDUINO_WIFI_PASSWORD=your_wifi_password
ARDUINO_EXPECTED_DEVICES=5

# 센서 설정
SENSOR_SAMPLE_RATE=104
GYRO_SENSITIVITY=2000
ACCEL_SENSITIVITY=4
SENSOR_CALIBRATION_SAMPLES=100

# 보안 설정
SECRET_KEY=your_secret_key_here_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=["http://localhost:3000", "http://192.168.1.100:3000"]

# 성능 최적화
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=5

# 모니터링 및 로깅
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Redis (캐싱용 - 선택사항)
REDIS_URL=redis://localhost:6379/0
ENABLE_REDIS_CACHE=false

# 이메일 알림 (에러 발생 시)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ADMIN_EMAIL=admin@signglove.com 